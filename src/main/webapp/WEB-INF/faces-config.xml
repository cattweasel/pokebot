<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	metadata-complete="true" version="2.1">
	
	<managed-bean>
		<managed-bean-name>base</managed-bean-name>
		<managed-bean-class>net.cattweasel.pokebot.web.bean.BaseBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>net.cattweasel.pokebot.web.bean.SettingsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>map</managed-bean-name>
		<managed-bean-class>net.cattweasel.pokebot.web.bean.MapBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<application>
		
		<locale-config>
			<default-locale>de</default-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>es</supported-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>
		
		<resource-bundle>
    			<base-name>net.cattweasel.pokebot.web.messages.pokebot</base-name>
    			<var>msgs</var>
		</resource-bundle>
		
	</application>
	
</faces-config>
